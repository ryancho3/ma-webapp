<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('section/head_common') %>
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Matchbook Foundation: Curriculum</title>
  </head>

  <body>
    <%- include('section/header'); %>

    <div class="container">
      <div id="page">
        <h2>Curriculum</h2>
        <div>
            <strong>Name: </strong>
            <span><%= curriculumInfo['name'] %></span>
        </div>
        <div>
            <strong>Description: </strong>
            <span><%= curriculumInfo['description'] %></span>
        </div>
        <div>
            <a href="/content/<%= curriculumId %>.pdf"><Strong>Curriculum Overview</Strong></a>
        </div>
        <div>
          <strong>Availability (next 7 days)</strong>
        </div>
        <div>
          <% Object.keys(curriculumAvailability).forEach(function(yyyymmdd){ %>
              <span><%= yyyymmdd %> </span>
              <% var hourList = curriculumAvailability[yyyymmdd]; %>
            <ul>
              <% hourList.forEach(function(hour) { %>
                <li><a href="/appointment-create?curriculumId=<%= curriculumId %>&yyyymmdd=<%= yyyymmdd %>&hour=<%= hour %>"><%= yyyymmdd %> <%= hour %>:00</a></li>
              <% }) %>
            </ul>
          <%
            });
          %>

        </div>
      </div>
    </div>

    <%- include('section/footer'); %>

    <!-- Static -->
    <script type="text/javascript">
    $(document).ready(function() {

    })
    </script>
  </body>
</html>
