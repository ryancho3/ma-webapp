<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('section/head_common') %>
    <%- include('section/functions') %>
    <meta name="description" content="">
    <meta name="author" content="">
    <title><%= curriculumInfo['name'] %> - Matchbook Academy</title>
  </head>

  <body>
    <%- include('section/header'); %>

    <div class="container">
      <div id="page">
        <h2><%= curriculumInfo['name'] %></h2>
        <div>
            <strong>Description | 설명: </strong>
            <span><%= curriculumInfo['description'] %></span>
        </div>
        <div>
            <a href="/content/<%= curriculumId %>.pdf"><Strong>Curriculum Overview</Strong></a>
        </div>
        <div>
          <strong>Availability | 수업 가능 시간</strong>
        </div>
        <div>
          <% Object.keys(curriculumAvailability).forEach(function(yyyymmdd){ %>
              <span><%= parseDisplayStringFromYYYYMMDD(yyyymmdd) %> </span>
              <% var hourList = curriculumAvailability[yyyymmdd]; %>
            <ul>
              <% hourList.forEach(function(hour) { %>
                <li><a href="/appointment-create?curriculumId=<%= curriculumId %>&yyyymmdd=<%= yyyymmdd %>&hour=<%= hour %>"><%= parseDisplayStringFromYYYYMMDD(yyyymmdd) %> <%= hour %>:00</a></li>
              <% }) %>
            </ul>
          <%
            });
          %>

        </div>
      </div>
    </div>

    <%- include('section/footer'); %>

    <!-- Static -->
    <script type="text/javascript">
    $(document).ready(function() {

    })
    </script>
  </body>
</html>
